{
  "name": "user-story-mapping-tool",
  "version": "1.0.0",
  "private": true,
  "description": "User Story Mapping Tool - Monorepo",
  "scripts": {
    "build": "pnpm --filter @user-story-mapping/backend build",
    "dev": "pnpm --filter @user-story-mapping/backend dev",
    "start": "pnpm --filter @user-story-mapping/backend start",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "prettier": "^3.2.4",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
